{
  "name": "farmacia-backend",
  "version": "1.0.0",
  "description": "Sistema de controle de farmácia - Backend Express.js",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development node dist/server.js",
    "start:staging": "cross-env NODE_ENV=staging node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register src/server.ts",
    "dev:watch": "cross-env NODE_ENV=development nodemon --ext ts --exec \"node -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
    "dev:staging": "cross-env NODE_ENV=staging nodemon --exec \"node -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
    "dev:prod": "cross-env NODE_ENV=production nodemon --exec \"node -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "migrate": "prisma migrate dev",
    "migrate:staging": "cross-env NODE_ENV=staging prisma migrate deploy",
    "migrate:prod": "cross-env NODE_ENV=production prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/database/seed.ts",
    "db:seed:staging": "cross-env NODE_ENV=staging tsx src/database/seed.ts",
    "db:seed:prod": "cross-env NODE_ENV=production tsx src/database/seed.ts",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration", 
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:real-db": "jest --setupFilesAfterEnv='<rootDir>/tests/setup.real-db.helper.ts'",
    "db:start": "cd .. && docker-compose -f docker-compose.dev.yml up -d db-dev",
    "db:stop": "cd .. && docker-compose -f docker-compose.dev.yml down",
    "db:reset": "npx prisma migrate reset --force",
    "db:fresh": "npm run db:reset && npm run db:seed",
    "dev:reset": "npm run db:fresh && npm run dev",
    "dev:full": "cd .. && docker-compose -f docker-compose.dev.yml up -d --build",
    "pre-commit": "../scripts/pre-commit.sh",
    "typecheck": "tsc --noEmit",
    "start:local": "npm run db:start && npm run dev:watch"
  },
  "keywords": [
    "farmacia",
    "express",
    "typescript",
    "ddd"
  ],
  "prisma": {
    "seed": "node dist/database/seed.js"
  },
  "author": "Sistema Farmácia",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "cpf-cnpj-validator": "^1.0.3",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "eslint": "^8.56.0",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
